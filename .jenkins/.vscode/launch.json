{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "preLaunchTask": "tsc-watch",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "env": {
                "WORKSPACE": "${workspaceFolder}/../"
            }
        }
    ]
}